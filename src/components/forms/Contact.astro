<section
  class="md:px-12 sm:px-8 relative border-zinc-700 2xl:border-x hidden md:block"
>
  <div class="border-x border-zinc-700 h-14"></div>
</section>
<section
  class="md:px-12 sm:px-8 relative border-y border-zinc-700 2xl:border-x"
>
  <div class="border-x border-zinc-700">
    <div
      class="p-px lg:rounded-t-[3rem] overflow-hidden bg-gradientTopRight ring-1 ring-zinc-700"
    >
      <div
        class="bg-black/50 lg:bg-transparent backdrop-blur-3xl lg:backdrop-blur-none"
      >
        <div
          class="mx-auto 2xl:max-w-7xl py-24 lg:px-16 md:px-12 px-8 xl:px-24 items-center relative 0 w-full"
        >
          <div>
            <h2
              class="text-5xl tracking-tighter font-normal md:text-6xl text-white mt-12"
            >
              All blog tags
            </h2>
          </div>
        </div>
        <form class="flex flex-col w-full">
          <div class="space-y-px">
           <div class="grid grid-cols-1 lg:grid-cols-2 gap-px">
              <div>
                <label for="email-address" class="sr-only">Your name</label>
                <input
                  id="name"
                  name="name"
                  type="text"
                  autocomplete="text"
                  class="block w-full appearance-none border border-transparent  p-8 lg:px-20 bg-black/80 backdrop-blur-3xl placeholder-zinc-500 text-white focus:border-white/10 focus:outline-none focus:ring-white/10 sm:text-2xl focus:ring-1 ring-inset"
                  placeholder="Your email"
                />
              </div>
              <div>
                <label for="Your name" class="sr-only">Company name</label>
                <input
                  id="companyname"
                  name="companyname"
                  type="text"
                  class="block w-full appearance-none border border-transparent  p-8 lg:px-20 bg-black/80 backdrop-blur-3xl placeholder-zinc-500 text-white focus:border-white/10 focus:outline-none focus:ring-white/10 sm:text-2xl focus:ring-1 ring-inset"
                  placeholder="Company name"
                />
              </div>
           </div>
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-px">
              <div>
                <label for="phone" class="sr-only">Phone number</label>
                <input
                  id="phone"
                  name="phone"
                  type="text"
                  required
                  class="block w-full appearance-none border border-transparent  p-8 lg:px-20 bg-black/80 backdrop-blur-3xl placeholder-zinc-500 text-white focus:border-white/10 focus:outline-none focus:ring-white/10 sm:text-2xl focus:ring-1 ring-inset"
                  placeholder="Your phone"
                />
              </div>
              <div>
                <label for="email-address" class="sr-only">Email address</label>
                <input
                  id="email-address"
                  name="email-address"
                  type="email"
                  autocomplete="email"
                  required
                  class="block w-full appearance-none border border-transparent  p-8 lg:px-20 bg-black/80 backdrop-blur-3xl placeholder-zinc-500 text-white focus:border-white/10 focus:outline-none focus:ring-white/10 sm:text-2xl focus:ring-1 ring-inset"
                  placeholder="Your email"
                />
              </div>
          </div>
            <div>
              <label for="message" class="sr-only">your message</label>
              <textarea
                id="message"
                name="message"
                required
                rows="2"
                class="block w-full appearance-none border border-transparent  p-8 lg:px-20 bg-black/80 backdrop-blur-3xl placeholder-zinc-500 text-white focus:border-white/10 focus:outline-none focus:ring-white/10 sm:text-2xl focus:ring-1 ring-inset"
                placeholder="Your message ( optional )"></textarea>
            </div>
          </div>
          <div class="border-t border-zinc-700 ">
            <button
              type="submit"
              class="text-sm py-2 w-full px-8 lg:px-10 uppercase border justify-center focus:ring-2 border-transparent bg-black text-white duration-200 focus:ring-offset-2 focus:ring-white hover:text-sky-500 inline-flex items-center lg:text-4xl ring-1 md:text-xl ring-transparent h-16 lg:h-28"
            >
              Contact us
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
